<h1>Review in <%= @makeups.title %></h1>
<p id="notice"><%= notice %></p>
<p>
<strong>Title:</strong>
<%= @movie.title %>
</p>
<p>
<strong>Rating:</strong>
<%= @makeups.rating %>
</p>
<p>
<strong>Release Date:</strong>
<%= @makeups.release %>
</p>
<!-- Display the reviews of a movie -->
<h2>Review</h2>
<% @makeups.review.each do |review| %>
    <p>
    <b>Review details:</b>
    <%= review.details %>
    </p>
    <% end %>

<%= link_to 'Edit', edit_makeups_review_path(@makeups, @review) %> |
<%= link_to 'Back', makeups_reviews_path(@makeups) %>
<%= link_to 'Show Reviews', makeups_review_path(@makeups) %>


